BoxLayout:
    orientation: "vertical"
    BoxLayout:

        orientation: "horizontal"
        Label:
            id: trip_location
            text:
            text: "Current Trip Location: "
            font_size: 32
            #padding_horizontal: 10
            #padding_vertical: 10

    BoxLayout:
        orientation: "horizontal"
        Spinner:
            id: country_selection
            values:
            font_size: 26
            #on_press: app.trip_location()
            #on_press: app.change_accepted()
            multiline: False
            #padding_horizontal: 10
            #padding_vertical: 10
        TextInput:
            id: target_amount
            text:
            font_size: 26
            on_text_validate: app.get_currency_conversion('to home')
            multiline: False
            #padding_horizontal: 10
            #padding_vertical: 10

    BoxLayout:
        orientation: "horizontal"
        Label:
            id: home_country
            text:
            font_size: 26
            #padding_horizontal: 10
            #padding_vertical: 10

        TextInput:
            id: home_amount
            on_text:
            font_size: 26
            on_text_validate: app.get_currency_conversion('to target')
            multiline: False
            #padding_horizontal: 10
            #padding_vertical: 10

    BoxLayout:
        orientation: "horizontal"
        Label:
            id: current_date
            text: "Today is: "
            font_size: 26

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.3
        Label:
            id: status
            text:
        Button:
            id: update_currency
            text: "Update Currency"
            on_press: app.update_currency
